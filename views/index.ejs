<html>
  <head>
    <title><%= title%></title>
  </head>
  <body>
    <h1>Welcome to the home page</h1>

    <ul>
      <% messages.forEach((message) => { %>
      <div style="margin: 20px 0">
        <li>User: <%= message.user %></li>
        <li>Message: <%= message.text %></li>
        <li>Date: <%= message.added %></li>
        <a href="/message/<%= message.id %>">View message details</a>
      </div>
      <% }) %>
    </ul>
    <a href="/newMessage">Send a message</a>
  </body>
</html>
