<html>
  <head>
    <title>404</title>
  </head>
  <body>
    <h1><%= message %></h1>
    <p>You will be redirected in <span id="countdown">3</span> seconds...</p>
    <script>
      let delay = <%= delay / 1000 %>;
      const countdownElement = document.getElementById('countdown');
      const interval = setInterval(() => {
          delay--;
          countdownElement.innerText = delay;
          if (delay <= 0) {
              clearInterval(interval);
              window.location.href = '<%= redirectTo %>'; // Redirect to the specified URL
          }
      }, 1000);
    </script>
  </body>
</html>
